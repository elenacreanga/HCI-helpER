
{
  "manifest_version": 2,

  "name": "Test Colour Me Right",
  "description": "Test",
  "version": "1.0",
    "browser_action": {
        "default_icon": "css/images/Logo.png",
        "default_popup": "popup.html"
  },
  "permissions": [
    "activeTab", "tabs", "http://*/*", "https://*/*", "*://*/*"
    ],
  "content_scripts": [
    {
      "js": [ "popup.js" ],
      "matches": [ "http://*/*", "https://*/*", "*://*/*" ]
    }
  ]
}